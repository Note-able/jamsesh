{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "jsx": true,
    "modules": true,
    "templateStrings": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "no-console": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 1,
    "no-irregular-whitespace": 1,
    "block-scoped-var": 1,
    "consistent-return": 2,
    "curly": 1,
    "dot-notation": [2],
    "eqeqeq": [2, "smart"],
    "no-else-return": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 1,
    "no-param-reassign": 2,
    "no-useless-concat": 1,
    "no-unused-vars": [1, {"vars": "all", "args": "after-used", "varsIgnorePattern": "^[A-Z]"}],
    "array-bracket-spacing": 1,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "indent": [2, 2],
    "jsx-quotes": [2, "prefer-double"],
    "no-trailing-spaces": 2,
    "quotes": [2, "single", "avoid-escape"],
    "arrow-spacing": 2,
    "constructor-super": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-template": 2
  }
}
